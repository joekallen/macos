#! /usr/bin/env bash

# DESCRIPTION
# Installs App Store software.

# SETTINGS
set -o nounset
set -o errexit
set -o pipefail
IFS=$'\n\t'
SCRIPT_PATH="$MACOS_CONFIG_PATH/bin/install_app_store"

# EXECUTION
if [[ -x "$SCRIPT_PATH" ]]; then
  "$SCRIPT_PATH"
else
  printf "WARNING: App Store install script does not exist or is not executable.\n"
fi
